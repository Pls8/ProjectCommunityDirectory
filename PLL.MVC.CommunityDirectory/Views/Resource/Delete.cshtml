@model SLL.CommunityDirectory.DTOs.ResourceReadDTO

@{
    ViewData["Title"] = "Delete Resource";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Resource</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Resource Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Model.City</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>