@model DAL.CommunityDirectory.Models.Resources.ResourceClass

@{
    ViewData["Title"] = "Edit Resource";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 border p-4 rounded bg-light shadow-sm">
            <h3>Edit Resource: @Model.Name</h3>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label font-weight-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label font-weight-bold">Category</label>
                        <select asp-for="CategoryId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="form-label font-weight-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="City" class="form-label font-weight-bold"></label>
                        <input asp-for="City" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Phone" class="form-label font-weight-bold"></label>
                        <input asp-for="Phone" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <div class="form-check mb-2">
                            <input asp-for="IsApproved" class="form-check-input" />
                            <label class="form-check-label" asp-for="IsApproved">Approved</label>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}