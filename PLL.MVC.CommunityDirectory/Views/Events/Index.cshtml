@* @model IEnumerable<DAL.CommunityDirectory.Models.Event.EventClass> *@
@model IEnumerable<SLL.CommunityDirectory.DTOs.EventDTO>

@{
    ViewData["Title"] = "Events Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Upcoming Events</h2>
        <a asp-action="Create" class="btn btn-primary">Add New Event</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm h-100">
                    <img src="@(string.IsNullOrEmpty(item.ImagePath) ? "/imgs/FallBackImg.jpg" : item.ImagePath)"
                         class="card-img-top" alt="Event Image" style="height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <span class="badge bg-primary mb-2" style="width: fit-content;">
                            @* <i class="bi bi-tag"></i> @(item.Category?.Name ?? "No Category") *@
                            <i class="bi bi-tag"></i> @(item.CategoryName ?? "No Category")
                        </span>
                        <p class="card-text text-truncate">@item.Description</p>

                        <div class="mt-auto">
                            <p class="text-muted mb-1"><small>📅 @item.EventDate.ToString("dd MMM yyyy")</small></p>
                            <p class="text-muted mb-3"><small>📍 @item.Location</small></p>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>