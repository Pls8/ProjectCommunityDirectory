@model DAL.CommunityDirectory.Models.Event.EventClass

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Event Information</h3>
            <span class="badge bg-light text-dark">ID: @Model.Id</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                @* Left Side: Content *@
                <div class="col-md-8">
                    <h2 class="text-primary">@Model.Title</h2>
                    <h5 class="text-muted"><i class="bi bi-person-badge"></i> Organized by: @Model.Organizer</h5>
                    <h6 class="text-secondary"><i class="bi bi-folder"></i> Category: @(Model.Category?.Name ?? "General")</h6>
                    <p class="lead text-muted">
                        <i class="bi bi-geo-alt-fill text-danger"></i> @Model.Location
                    </p>
                </div>

                @* Right Side: Small Boxes for Image and Date *@
                <div class="col-md-4 text-md-end">
                    @* Image Box *@
                    <div class="p-2 border rounded bg-light mb-3">
                        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/imgs/FallBackImg.jpg" : Model.ImagePath)"
                             class="img-fluid rounded"
                             style="max-height: 150px; width: 100%; object-fit: cover;"
                             alt="Event Image">
                    </div>

                    @* Date Box *@
                    <div class="p-3 border rounded bg-light">
                        <h6 class="mb-1 fw-bold">Date & Time</h6>
                        <p class="mb-0 small">@Model.EventDate.ToString("f")</p>
                    </div>
                </div>
            </div>

            <hr />

            <div class="mb-4">
                <h5 class="text-secondary">Description</h5>
                <div class="p-3 bg-white border rounded" style="min-height: 150px;">
                    @Model.Description
                </div>
            </div>

            <div class="d-flex gap-2 border-top pt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit Details
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>